doctype html
include ./adminHome.jade
html
    head
        script(src="/javascripts/loginState.js")

    body
        //- <table class="">
        //- ...
        //- </table>
        table.table.table-striped
            thead
                tr
                    th(scope='col') #
                    th(scope='col') User Name
                    th(scope='col') Email Address
                    th(scope='col') View
            tbody
                - count = 1
                each user in data
                    tr
                        th(scope='row')= count
                        td= user.name
                        td= user.email
                        td
                            a.stretched-link(href='/admin/users/#{user._id}') View
                    - count = count + 1
                    
